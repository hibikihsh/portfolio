---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <a href="/">{SITE_TITLE}</a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <a href="https://scrapbox.io/hibikihsh/" target="_blank" rel="noopenner"
        >Scrapbox</a
      >
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0 auto;
    padding: 4rem 0;
    max-width: 720px;
    /* background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%); */
  }
  h2 {
    margin: 0;
    font-size: 1em;
    border: 0;
    font-weight: 700;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 1rem;
  }
  nav a {
    padding: 0.5em;
    margin: 0 0.25em;
    color: var(--black);
    font-weight: bold;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    color: var(--accent);
    text-decoration: underline;
    font-weight: bold;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    header {
      padding: 2rem 0;
    }

    nav {
      padding-right: 0px;
      display: block;
      text-align: center;
    }

    .internal-links {
      padding-top: 1.5rem;
    }
  }
</style>
