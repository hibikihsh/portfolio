---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { ViewTransitions } from "astro:transitions";
import Tags from "../components/Tags.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <ViewTransitions />

    <style>
      h1 {
        margin-top: 2em;
      }
      .title {
        margin: 0;
        padding: 0;
        color: rgb(var(--black));
        line-height: 1.5;
        font-weight: bold;
        font-size: 1.25rem;
        transition: all 0.3s ease-in-out;
      }
      .date {
        margin: 0;
        padding: 0;
        color: rgb(var(--gray));
        font-size: 1rem;
        padding-top: 0.5em;
        transition: all 0.3s ease-in-out;
      }

      img,
      figure {
        transition: all 0.3s ease-in-out;
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img,
      figure:hover {
        /* box-shadow: var(--box-shadow); */
      }
      a {
        text-decoration: none;
      }

      @media (max-width: 620px) {
        ul {
          gap: 3rem;
        }
        ul li {
          width: 100%;
          text-align: left;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
        }
        .title {
          padding-top: 0.5rem;
          font-size: 1.25rem;
        }
        .date {
          font-size: 0.875rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <section class="">
        <h2 class="mb-6 border-b-[1px]">Links</h2>

        <div class="social-links flex">
          <a
            href="https://github.com/hibikihsh"
            target="_blank"
            class="hover:opacity-80 transition-all"
          >
            <svg
              viewBox="0 0 16 16"
              aria-hidden="true"
              width="40"
              height="40"
              astro-icon="social/github"
            >
              <path
                fill="currentColor"
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
              >
              </path>
            </svg>
          </a>
        </div>
      </section>

      <section>
        <h2 class="mb-6 border-b-[1px]">Blogs</h2>

        <Tags />
        <ul class="grid sm:gap-8 list-none pl-0">
          {
            posts
              .map((post) => {
                if (post.data.isPublished) {
                  return (
                    <li>
                      <a
                        href={`/blog/${post.slug}/`}
                        class="sm:flex items-center"
                      >
                        {post.data.heroImage ? (
                          <img
                            width={350}
                            src={post.data.heroImage}
                            alt=""
                            transition:name={`img-${post.data.id}`}
                          />
                        ) : (
                          <div transition:name={`img-${post.data.id}`}>
                            <div class="emoji-image w-full sm:w-[350px] bg-gray-200 rounded-lg grid place-content-center h-[200px]">
                              <div class="text-[75px]">{post.data.emoji}</div>
                            </div>
                          </div>
                        )}

                        <div class="sm:pl-4 flex-1">
                          <p
                            class="title"
                            transition:name={`title-${post.data.id}`}
                          >
                            {post.data.title}
                          </p>
                          <p
                            class="date"
                            transition:name={`date-${post.data.id}`}
                          >
                            <FormattedDate date={post.data.pubDate} />
                          </p>
                        </div>
                      </a>
                    </li>
                  );
                }
              })
              .reverse()
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
