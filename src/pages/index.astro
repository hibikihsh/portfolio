---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { ViewTransitions } from "astro:transitions";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);

// Scrapboxのデータを取得
const response = await fetch("https://scrapbox.io/api/pages/hibikihsh");
const data = await response.json();
const memos = data.pages
  .sort((a: any, b: any) => b.updated - a.updated)
  .slice(0, 4);
---

<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <div
      class="fixed bottom-4 sm:bottom-6 left-1/2 -translate-x-1/2 text-white rounded-xl flex items-center flex-col"
